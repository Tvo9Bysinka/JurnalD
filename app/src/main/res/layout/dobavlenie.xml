<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbara" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D1E6CD">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Факультеты"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b_dobavlenie_faculteta"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="OnClick_perehod_k_dobav_facultet"
                android:text="+"
                app:backgroundTint="#D514AFA1" />

            <Button
                android:id="@+id/pokazat_facultet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:onClick="OnClick_Pokazat_Facultet"
                android:text="Показать"
                android:textColor="#083E37"
                app:backgroundTint="#77A6A2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="#D1E6CD">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Направления"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b_dobavlenie_napravleni9"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="OnClick_perehod_k_dobav_napravlenie"
                android:text="+"
                app:backgroundTint="#D514AFA1" />

            <Button
                android:id="@+id/pokazat_napravleni9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:onClick="OnClick_Pokazat_Napravlenie"
                android:text="Показать"
                android:textColor="#083E37"
                app:backgroundTint="#77A6A2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="#D1E6CD">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Группы"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b_dobavlenie_groupi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="OnClick_perehod_k_dobav_group"
                android:text="+"
                app:backgroundTint="#D514AFA1" />

            <Button
                android:id="@+id/pokazat_groupi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:onClick="OnClick_Pokazat_Group"
                android:text="Показать"
                android:textColor="#083E37"
                app:backgroundTint="#77A6A2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#D1E6CD">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Студенты"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b_dobavlenie_studenta"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="OnClick_perehod_k_dobav_studenti"
                android:text="+"
                app:backgroundTint="#D514AFA1" />

            <Button
                android:id="@+id/pokazat_studenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:onClick="OnClick_Pokazat_Studenti"
                android:text="Показать"
                android:textColor="#083E37"
                app:backgroundTint="#77A6A2" />

        </TableRow>

        <ListView
            android:id="@+id/dobavlenie_LV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9796C18E"
            android:cacheColorHint="#0C0000" />

    </TableLayout>


</LinearLayout>