<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97C1DDBC"
    android:orientation="vertical"
    tools:context=".ui.dashboard.DashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="8dp"
            android:background="#64DD17"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="25dp"
                tools:src="@drawable/kisspng_professor_x_cartoon_animation_character_professor_5ac1af9e4ff6c8_9026922915226428463275" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button3"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:text="Преподаватель"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:backgroundTint="#80D8FF"
                app:elevation="3dp"
                app:strokeWidth="1dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="8dp"
            android:background="#FFD600"
            android:elevation="10dp">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="25dp"
                tools:src="@drawable/predmet" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:text="Предметы"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="#8C9EFF"
                app:elevation="3dp"
                app:strokeWidth="1dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="8dp"
            android:background="#FFAB00"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                tools:src="@drawable/fngs" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button2"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:text="Ф|Н|Г|С"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="#EA80FC"
                app:elevation="3dp"
                app:strokeWidth="1dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="8dp"
            android:background="#F35726"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                tools:src="@drawable/ic_jurnal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button12"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#1DD6A8"
                android:text="Записи Журнала"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:elevation="3dp"
                app:strokeWidth="1dp" />


        </TableRow>
    </TableLayout>

</LinearLayout>