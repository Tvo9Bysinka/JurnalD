<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/stlist_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxWidth="45dp"
                android:minWidth="35dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/stlist_firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxWidth="40dp"
                android:minWidth="35dp"
                android:paddingTop="5dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/stlist_middlename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxWidth="45dp"
                android:minWidth="35dp"
                android:paddingTop="5dp"
                android:textColor="#000000"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/stlist_id_facultet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxWidth="30dp"
                android:minWidth="10dp"
                android:paddingLeft="10dp"
                android:textColor="#CF0505"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/stlist_id_napravlenie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxWidth="35dp"
                android:minWidth="20dp"
                android:textColor="#FF6D00"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/stlist_id_groupa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxWidth="25dp"
                android:minWidth="15dp"
                android:textColor="#D500F9"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <TextView
        android:id="@+id/stlist_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:visibility="gone" />

</LinearLayout>